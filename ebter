<div id="draw" class="section">
<h2>Drawing Panel</h2>
<canvas id="canvas" width="800" height="500"></canvas><br>
<button onclick="clearCanvas()">Clear</button>
</div>

<script>
function show(id){
document.querySelectorAll('.section').forEach(s=>s.style.display='none');
document.getElementById(id).style.display='block';
}

function createItems(containerId, label){
const container=document.getElementById(containerId);
for(let i=1;i<=100;i++){
const card=document.createElement("div");
card.className="card";
card.innerHTML=`
<h3>${label} ${i}</h3>
${label==="Game" ? `<iframe src="https://example.com"></iframe>` : `<p>Description for ${label} ${i}</p>`}
<button onclick="favorite('${label} ${i}')">‚≠ê Favorite</button>
`;
container.appendChild(card);
}
}

createItems("gamesGrid","Game");
createItems("moviesGrid","Movie");
createItems("musicGrid","Song");
createItems("mangaGrid","Manga");

function search(input, gridId){
let filter=input.value.toLowerCase();
let cards=document.getElementById(gridId).children;
for(let card of cards){
card.style.display=card.innerText.toLowerCase().includes(filter)?"block":"none";
}
}

function favorite(name){
let favs=JSON.parse(localStorage.getItem("favs")||"[]");
if(!favs.includes(name)) favs.push(name);
localStorage.setItem("favs",JSON.stringify(favs));
alert(name+" added to favorites!");
}

// Drawing
const canvas=document.getElementById("canvas");
const ctx=canvas.getContext("2d");
let drawing=false;

canvas.onmousedown=()=>drawing=true;
canvas.onmouseup=()=>{drawing=false;ctx.beginPath();}
canvas.onmousemove=e=>{
if(!drawing)return;
ctx.lineWidth=3;
ctx.lineCap="round";
ctx.strokeStyle="black";
ctx.lineTo(e.offsetX,e.offsetY);
ctx.stroke();
ctx.beginPath();
ctx.moveTo(e.offsetX,e.offsetY);
}

function clearCanvas(){
ctx.clearRect(0,0,canvas.width,canvas.height);
}
</script>

